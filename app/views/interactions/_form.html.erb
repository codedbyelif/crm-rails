<%= form_with(model: interaction, class: "space-y-8 divide-y divide-gray-200") do |form| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div class="pt-8">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Interaction Details</h3>
      </div>
      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        
        <div class="sm:col-span-3">
          <%= form.label :interaction_type, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
             <%= form.select :interaction_type, ["Call", "Email", "Meeting", "Note"], {}, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :occurred_at, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.datetime_field :occurred_at, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :interactable_type, "Related To", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :interactable_type, ["Customer", "Lead"], { prompt: "Select Type" }, 
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                data: { controller: "interaction-type", action: "change->interaction-type#toggle" }
            %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :interactable_id, "ID", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
             <%= form.text_field :interactable_id, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "Enter Customer/Lead ID" %>
             <p class="mt-1 text-xs text-gray-500">Enter the ID of the related Customer or Lead.</p>
          </div>
        </div>

         <div class="sm:col-span-6">
          <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :notes, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", interactions_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= form.submit "Save", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>
