<div class="space-y-8">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Overview
      </h2>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
      <%= link_to new_lead_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        New Lead
      <% end %>
      <%= link_to new_customer_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        New Customer
      <% end %>
    </div>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Customers Card -->
    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 overflow-hidden shadow-lg rounded-xl text-white">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-white/20 rounded-md p-3">
            <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-indigo-100 truncate">Total Customers</dt>
              <dd class="text-3xl font-bold"><%= Customer.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Leads Card -->
    <div class="bg-gradient-to-br from-pink-500 to-rose-500 overflow-hidden shadow-lg rounded-xl text-white">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-white/20 rounded-md p-3">
            <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-pink-100 truncate">Active Leads</dt>
              <dd class="text-3xl font-bold"><%= Lead.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Interactions Card -->
    <div class="bg-gradient-to-br from-cyan-400 to-blue-500 overflow-hidden shadow-lg rounded-xl text-white">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-white/20 rounded-md p-3">
             <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-cyan-100 truncate">Total Interactions</dt>
              <dd class="text-3xl font-bold"><%= Interaction.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

     <!-- Conversion Rate (Mock) -->
    <div class="bg-gradient-to-br from-emerald-400 to-green-500 overflow-hidden shadow-lg rounded-xl text-white">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-white/20 rounded-md p-3">
             <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-emerald-100 truncate">Conversion Rate</dt>
              <dd class="text-3xl font-bold">24%</dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Activity -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Activity</h3>
      </div>
      <ul class="divide-y divide-gray-200">
        <% Interaction.order(occurred_at: :desc).limit(5).each do |interaction| %>
          <li class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <span class="h-10 w-10 rounded-full flex items-center justify-center 
                  <%= case interaction.interaction_type 
                      when 'Call' then 'bg-blue-100 text-blue-600'
                      when 'Email' then 'bg-purple-100 text-purple-600' 
                      when 'Meeting' then 'bg-green-100 text-green-600'
                      else 'bg-gray-100 text-gray-600' end %>">
                    <% case interaction.interaction_type 
                       when 'Call' %>
                      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                    <% when 'Email' %>
                      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                    <% else %>
                       <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                    <% end %>
                  </span>
                </div>
                <div class="ml-4">
                  <p class="text-sm font-medium text-indigo-600 truncate">
                    <%= interaction.interaction_type %>
                  </p>
                  <p class="text-sm text-gray-500">
                    with <%= interaction.interactable.try(:name) || interaction.interactable.try(:source) %>
                  </p>
                </div>
              </div>
              <div class="ml-2 flex-shrink-0 flex flex-col items-end">
                <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Completed
                </p>
                <p class="mt-1 text-xs text-gray-500">
                  <%= time_ago_in_words(interaction.occurred_at) %> ago
                </p>
              </div>
            </div>
             <div class="mt-2 text-sm text-gray-600 pl-14">
               <%= interaction.notes.truncate(80) %>
             </div>
          </li>
        <% end %>
        <% if Interaction.count == 0 %>
          <li class="px-4 py-8 text-center text-gray-500 text-sm">
            No recent activity found.
          </li>
        <% end %>
      </ul>
      <div class="bg-gray-50 px-4 py-4 sm:px-6 rounded-b-lg">
        <div class="text-sm">
          <%= link_to interactions_path, class: "font-medium text-indigo-600 hover:text-indigo-500" do %>
            View all activity <span aria-hidden="true">&rarr;</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Quick Links / Recent Customers -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Newest Customers</h3>
      </div>
       <ul class="divide-y divide-gray-200">
        <% Customer.order(created_at: :desc).limit(5).each do |customer| %>
          <li class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                 <div class="flex-shrink-0 h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 font-bold">
                    <%= customer.name[0..1].upcase %>
                 </div>
                 <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= customer.name %></div>
                    <div class="text-sm text-gray-500"><%= customer.email %></div>
                 </div>
              </div>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                <%= customer.status %>
              </span>
            </div>
          </li>
        <% end %>
         <% if Customer.count == 0 %>
          <li class="px-4 py-8 text-center text-gray-500 text-sm">
            No customers found.
          </li>
        <% end %>
       </ul>
        <div class="bg-gray-50 px-4 py-4 sm:px-6 rounded-b-lg">
        <div class="text-sm">
          <%= link_to customers_path, class: "font-medium text-indigo-600 hover:text-indigo-500" do %>
            View all customers <span aria-hidden="true">&rarr;</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
