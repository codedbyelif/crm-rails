<div class="space-y-8">
  <!-- Header with Red Gradient Background -->
  <div class="bg-gradient-to-r from-rose-700 to-red-600 rounded-2xl shadow-xl p-8 text-white mb-10">
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h2 class="text-3xl font-extrabold leading-7 sm:text-4xl sm:truncate">
          Genel Bakış
        </h2>
        <p class="mt-2 text-rose-100 text-lg">
          Hoş geldiniz! İşte CRM durumunuzun özeti.
        </p>
      </div>
      <div class="mt-6 flex md:mt-0 md:ml-4 space-x-3">
        <%= link_to new_lead_path, class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-rose-700 bg-white hover:bg-rose-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500 transition-colors duration-200" do %>
          <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Yeni İpucu
        <% end %>
        <%= link_to new_customer_path, class: "inline-flex items-center px-6 py-3 border border-white rounded-lg shadow-sm text-base font-medium text-white bg-rose-600/30 hover:bg-rose-600/50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white transition-colors duration-200" do %>
          <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          Yeni Müşteri
        <% end %>
      </div>
    </div>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Customers Card -->
    <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100 hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-rose-100 rounded-lg p-3">
            <svg class="h-8 w-8 text-rose-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Toplam Müşteri</dt>
              <dd class="text-3xl font-bold text-gray-900"><%= Customer.count %></dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-6 py-3">
        <div class="text-sm">
          <a href="<%= customers_path %>" class="font-medium text-rose-600 hover:text-rose-500 flex items-center">
            Listeyi Gör <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/></svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Leads Card -->
    <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100 hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-red-100 rounded-lg p-3">
            <svg class="h-8 w-8 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Aktif İpuçları</dt>
              <dd class="text-3xl font-bold text-gray-900"><%= Lead.count %></dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-6 py-3">
        <div class="text-sm">
          <a href="<%= leads_path %>" class="font-medium text-rose-600 hover:text-rose-500 flex items-center">
            İpuçlarını Gör <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/></svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Interactions Card -->
    <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100 hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-orange-100 rounded-lg p-3">
             <svg class="h-8 w-8 text-orange-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Etkileşimler</dt>
              <dd class="text-3xl font-bold text-gray-900"><%= Interaction.count %></dd>
            </dl>
          </div>
        </div>
      </div>
            <div class="bg-gray-50 px-6 py-3">
        <div class="text-sm">
          <a href="<%= interactions_path %>" class="font-medium text-rose-600 hover:text-rose-500 flex items-center">
            Geçmişi Gör <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/></svg>
          </a>
        </div>
      </div>
    </div>

     <!-- Conversion Rate (Mock) -->
    <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100 hover:shadow-xl transition-shadow duration-300">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-green-100 rounded-lg p-3">
             <svg class="h-8 w-8 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Dönüşüm Oranı</dt>
              <dd class="text-3xl font-bold text-gray-900">%24</dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-6 py-3">
        <div class="text-sm text-gray-500">
          Geçen aya göre <span class="text-green-600 font-semibold">%12 artış</span>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Activity -->
    <div class="bg-white shadow-lg rounded-xl border border-gray-200">
      <div class="px-6 py-5 border-b border-gray-200 bg-gray-50 rounded-t-xl flex justify-between items-center">
        <h3 class="text-lg leading-6 font-bold text-gray-900">Son Hareketler</h3>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-rose-100 text-rose-800">
          Canlı Akış
        </span>
      </div>
      <ul class="divide-y divide-gray-200">
        <% Interaction.order(occurred_at: :desc).limit(5).each do |interaction| %>
          <li class="px-6 py-5 hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <span class="h-10 w-10 rounded-full flex items-center justify-center 
                  <%= case interaction.interaction_type 
                      when 'Call' then 'bg-blue-100 text-blue-600'
                      when 'Email' then 'bg-purple-100 text-purple-600' 
                      when 'Meeting' then 'bg-green-100 text-green-600'
                      else 'bg-gray-100 text-gray-600' end %>">
                    <% case interaction.interaction_type 
                       when 'Call' %>
                      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                    <% when 'Email' %>
                      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                    <% else %>
                       <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                    <% end %>
                  </span>
                </div>
                <div class="ml-4">
                  <p class="text-sm font-bold text-gray-900">
                    <%= interaction.interaction_type %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= interaction.interactable.try(:name) || interaction.interactable.try(:source) %> ile
                  </p>
                </div>
              </div>
              <div class="ml-2 flex-shrink-0 flex flex-col items-end">
                <p class="text-xs text-gray-500 font-medium">
                  <%= time_ago_in_words(interaction.occurred_at) %> önce
                </p>
              </div>
            </div>
             <div class="mt-2 text-sm text-gray-600 pl-14">
               <%= interaction.notes.truncate(80) %>
             </div>
          </li>
        <% end %>
        <% if Interaction.count == 0 %>
          <li class="px-6 py-8 text-center text-gray-500 text-sm">
            Son zamanlarda bir hareket yok.
          </li>
        <% end %>
      </ul>
      <div class="bg-gray-50 px-6 py-4 rounded-b-xl border-t border-gray-200">
        <div class="text-sm">
          <%= link_to interactions_path, class: "font-medium text-rose-600 hover:text-rose-500 flex items-center justify-center" do %>
            Tüm hareketleri gör <span aria-hidden="true" class="ml-1">&rarr;</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Quick Links / Recent Customers -->
    <div class="bg-white shadow-lg rounded-xl border border-gray-200">
      <div class="px-6 py-5 border-b border-gray-200 bg-gray-50 rounded-t-xl">
        <h3 class="text-lg leading-6 font-bold text-gray-900">En Yeni Müşteriler</h3>
      </div>
       <ul class="divide-y divide-gray-200">
        <% Customer.order(created_at: :desc).limit(5).each do |customer| %>
          <li class="px-6 py-5 hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                 <div class="flex-shrink-0 h-10 w-10 rounded-full bg-rose-100 flex items-center justify-center text-rose-600 font-bold border-2 border-white shadow-sm">
                    <%= customer.name[0..1].upcase %>
                 </div>
                 <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= customer.name %></div>
                    <div class="text-sm text-gray-500"><%= customer.email %></div>
                 </div>
              </div>
              <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                <%= customer.status %>
              </span>
            </div>
          </li>
        <% end %>
         <% if Customer.count == 0 %>
          <li class="px-6 py-8 text-center text-gray-500 text-sm">
            Henüz müşteri yok.
          </li>
        <% end %>
       </ul>
        <div class="bg-gray-50 px-6 py-4 rounded-b-xl border-t border-gray-200">
        <div class="text-sm">
          <%= link_to customers_path, class: "font-medium text-rose-600 hover:text-rose-500 flex items-center justify-center" do %>
            Tüm müşterileri gör <span aria-hidden="true" class="ml-1">&rarr;</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
